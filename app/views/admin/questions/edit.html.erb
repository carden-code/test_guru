<h1><%= t('.header', title: @question.test.title) %></h1>

<%= form_with model: [:admin, @question], local: true do |form| %>
<%= render 'shared/errors', resource: @question %>

<p>
  <%= form.label t('body') %><br>
  <%= form.text_area :body, id: :question_body %>
</p><br>

<p><%= form.submit %></p>
<% end %>

<%= link_to t('back'), admin_test_path(@question.test) %>